@{
    ViewData["Title"] = "Mantenimiento Pokemon";
}

@model List<Pokedex.Core.Application.ViewModels.PokemonViewModel>

<div class="row py-lg-5">
    <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">Mantenimiento Pokémon</h1>
        <p class="lead text-muted">No vean Pokemon, eso hace daño</p>
        <p>
            <a asp-controller="PokemonMantain" asp-action="Create" class="btn btn-primary my-2">Crear Pokemon</a>
        </p>
    </div>
</div>

<div class="container-fluid">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

        @if (Model.Count == 0 || Model == null)
        {
            <h2>No hay Pokemone</h2>
        }
        else
        {
            @foreach (Pokedex.Core.Application.ViewModels.PokemonViewModel item in Model)
            {
                <div class="col">
                    <div class="card shadow-sm">
                        <img class="bd-placeholder-img card-img-top" src="@item.ImagePath">
                        <div class="card-body">
                            <h4>@item.name</h4>
                            <p class="card-text">@item.description</p>
                            <p class="card-text">Tipo: @item.Tipo.tipoName</p>
                             <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="PokemonMantain" asp-action="Edit" asp-route-id="@item.idpoke" class="btn btn-sm btn-outline-info mx-2">Editar</a>
                                    <a asp-controller="PokemonMantain" asp-action="DeletePokemon" asp-route-id="@item.idpoke" class="btn btn-sm btn-outline-danger mx-2">Borrar</a>
                               </div>
                             </div>
                            <div class="d-flex justify-content-between align-items-center">                             
                                <small class="text-muted">Region: @item.Region.regionName</small>
                                <small class="text-muted">Subtipo: @item.subtipo</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }

    </div>
</div>
